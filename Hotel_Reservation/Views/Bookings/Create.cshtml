

@model Hotel_Reservation.Models.Booking


@{
    ViewData["Title"] = "Create";
    Layout = "_MyLayout";
    SelectList   RoomTypes = new SelectList(ViewBag.RoomType, "Id", "Type");
}


  <div class="contact main-font-family text-center">
            <div class="container">
@*                <h2 id="contact">Booking</h2>
*@                <div class="row">
                    <div class="col-6">
                        <div style="background-color : rgba(212,5,1,.8);
    padding: 52px;
    border: 1px solid #000;">
                            <form asp-action="Create" asp-controller="Bookings">
                         <div asp-validation-summary="ModelOnly" class="text-light"></div>

                           <div class="form-group">
                <label asp-for="From" class="control-label"></label>
                <input asp-for="From" class="form-control" />
                <span asp-validation-for="From" class="text-light"></span>
                          </div>
                               <div class="form-group">
                <label asp-for="To" class="control-label"></label>
                <input asp-for="To" class="form-control" />
                <span asp-validation-for="To" class="text-light"></span>
                       </div>
                                <div class="form-group">
                <label asp-for="@Model.RoomType"  class="control-label"></label>
                <select asp-for="@Model.RoomTypeId" class ="form-control" asp-items="RoomTypes">
                 <option value="0"  selected > &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; ----select Room Type----</option>
                 </select>
                               </div>
                                   @if(ViewBag.SuccessMessage != null)
                                                        {
                                                         <div class="text-center text-success">
                                                             @ViewBag.SuccessMessage
                                                         </div>
                                                        }

                                           <div class="form-group">

                                <input type="submit" style="cursor:pointer;" value="Book Now">
                                            </div>

                            </form>
                             
                            <div >
                                <a class="small text-light" asp-action="index" asp-controller="Home">Back to Home Page</a>
                            </div>
                        </div>
                    </div>
                 
                    <div class="col-6">
                        <h2 class="text-right">Book Your Holiday Best for relaxed retreats and cultural encounters</h2>
                        <img src="/imgs/shape.png">
                        
                    </div>
                </div>
            </div>
            <div></div>
        </div>
      
   @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }







